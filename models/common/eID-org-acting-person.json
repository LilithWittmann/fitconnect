    "nationality": {
      "type": "string",
      "description": "Nationalität"
    },
    "artistic-name": {
      "type": "string",
      "description": "Künstler- oder Ordensname"
    },
    "doctoral-degrees": {
      "type": "string",
      "description": "Akademischer Titel, z.B. \"Dr.\" oder \"Prof.\""
